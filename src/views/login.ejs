<%- include('includes/head') %> <%- include('includes/nav') %>

<!-- Corrige o caminho do CSS -->
<link rel="stylesheet" href="/css/styles.css" />

<div class="login-container">
  <!-- Lado esquerdo (azul) -->
  <div class="left-side">
    <h2>Bem-vindo à nossa plataforma</h2>
    <p>Gerencie seus contatos com facilidade e segurança.</p>
  </div>

  <!-- Lado direito (Formulários) -->
  <div class="right-side">
    <div class="form-container">
      <%- include('includes/messages') %>
      <!-- Login -->
      <div id="login-section">
        <h4>Faça seu login</h4>
        <form class="form-login" action="/login/login" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="form-group">
            <label>Seu e-mail</label>
            <input type="email" class="form-control" name="email" />
          </div>
          <div class="form-group">
            <label>Sua senha</label>
            <input type="password" class="form-control" name="password" />
          </div>
          <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
        <p class="mt-3 text-center">
          Ainda não possui conta? <a href="#" id="show-register">Cadastre-se</a>
        </p>
      </div>

      <!-- Cadastro -->
      <div id="register-section" class="hidden">
        <h4>Faça seu cadastro</h4>
        <form class="form-cadastro" action="/login/register" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="form-group">
            <label>Seu e-mail</label>
            <input type="email" class="form-control" name="email" />
          </div>
          <div class="form-group">
            <label>Sua senha</label>
            <input type="password" class="form-control" name="password" />
          </div>
          <button type="submit" class="btn btn-primary">
            Criar minha conta
          </button>
        </form>
        <p class="mt-3 text-center">
          Já tem uma conta? <a href="#" id="show-login">Faça login</a>
        </p>
      </div>
    </div>
  </div>
</div>

<%- include('includes/footer') %>

<script>
  document
    .getElementById("show-register")
    .addEventListener("click", function (event) {
      event.preventDefault();
      document.getElementById("login-section").classList.add("hidden");
      document.getElementById("register-section").classList.remove("hidden");
    });

  document
    .getElementById("show-login")
    .addEventListener("click", function (event) {
      event.preventDefault();
      document.getElementById("register-section").classList.add("hidden");
      document.getElementById("login-section").classList.remove("hidden");
    });
</script>
