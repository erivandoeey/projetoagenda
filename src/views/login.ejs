<%- include('includes/head') %>

<!-- Corrige o caminho do CSS -->
<link rel="stylesheet" href="/css/styles.css" />

<div class="login-container">
  <!-- Lado esquerdo (azul) -->
  <div class="left-side"></div>

  <!-- Lado direito (Formulários) -->
  <div class="right-side">
    <div class="form-container">
      <%- include('includes/messages') %>
      <!-- Login -->
      <div id="login-section">
        <div id="login-section-titulo">
          <div class="titulo-esquerda">
            <h4>Faça Login no</h4>
          </div>
          <div class="titulo-direita">
            <h4>
              <a class="nav-link" href="/"><strong>MyAgenda</strong></a>
            </h4>
          </div>
        </div>
        <form class="form-login" action="/login/login" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="form-group">
            <label>E-MAIL</label>
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Seu e-mail"
            />
          </div>
          <div class="form-group">
            <label>SENHA</label>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Sua senha"
            />
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <p class="mt-3 text-center">
          Ainda não possui uma conta?
          <a href="#" id="show-register">Cadastre-se</a>
        </p>
      </div>

      <!-- Cadastro -->
      <div id="register-section" class="hidden">
        <div id="register-section-titulo">
          <div class="titulo-esquerda">
            <h4>Cadastre-se no</h4>
          </div>
          <div class="titulo-direita">
            <h4>
              <a class="nav-link" href="/"><strong>MyAgenda</strong></a>
            </h4>
          </div>
        </div>
        <form class="form-cadastro" action="/login/register" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="form-group">
            <label>USUÁRIO</label>
            <input
              type="text"
              class="form-control"
              name="username"
              placeholder="Seu usuário"
            />
          </div>
          <div class="form-group">
            <label>E-MAIL</label>
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Seu e-mail"
            />
          </div>
          <div class="form-group">
            <label>SENHA</label>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Sua senha"
            />
          </div>
          <button type="submit" class="btn btn-primary">Cadastre-se</button>
        </form>
        <p class="mt-3 text-center">
          Já possui uma conta? <a href="#" id="show-login">Faça login</a>
        </p>
      </div>
    </div>
  </div>
</div>

<%- include('includes/footer') %>

<script>
  document
    .getElementById("show-register")
    .addEventListener("click", function (event) {
      event.preventDefault();
      document.getElementById("login-section").classList.add("hidden");
      document.getElementById("register-section").classList.remove("hidden");
    });

  document
    .getElementById("show-login")
    .addEventListener("click", function (event) {
      event.preventDefault();
      document.getElementById("register-section").classList.add("hidden");
      document.getElementById("login-section").classList.remove("hidden");
    });
</script>
